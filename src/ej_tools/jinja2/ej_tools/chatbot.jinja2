{% extends 'ej_conversations/base.jinja2' %}
{% from "ej_tools/card_tools.jinja2" import card_tools %}

{% block metaOG2 %}

    <meta name="description" property="og:title" content="Area de integração da EJ com outras ferramentas.">
    <meta property="og:description" content="Area de integração da EJ com outras ferramentas.">

{% endblock metaOG2 %}

{% block _menu %} {{ menu(request.user, board_palette) }} {% endblock %}

{% block content %}
<div class="tools">
	<div class="tools-container">
    <div class="tools-section">
    <div class="tools-title">
      <h1 class="h2 text-accent"><a href="{{ conversation.patch_url('conversation-tools:index') }}">{{_("Tools")}}</a>
        > {{ tool.name }}</h1>
      <span class="helptext">{{tool.description }}</span>
    </div>
      <div class="tools-content">
        <h3 class="h3 divider">{{_("Integration options")}}</h3>
        <span class="helptext">{{_("Integrate this conversation with one of the available collection channels.")}}</span>
        <div id="container" class="chatbot-options">
          {{ card_tools(tool.webchat, static('/img/icons/talks.svg'), tool.webchat.name, tool.webchat.description,  conversation.patch_url('conversation-tools:webchat'), "oversize") }}
          {{ card_tools(tool.telegram, static('/img/logo/channel_telegram.svg'), tool.telegram.name,
          tool.telegram.description, conversation.patch_url('conversation-tools:telegram') , "") }}
          {{ card_tools(tool.whatsapp, static('/img/logo/channel_wpp.svg'), tool.whatsapp.name,
          tool.whatsapp.description, conversation.patch_url('conversation-tools:whatsapp') , "") }}
        </div>
    </div>
  </div>

</div>
{% endblock %}
