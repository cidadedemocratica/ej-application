{% if connections %}
<h2 class="divider">{{_("Integration")}}</h2> 
<span class="helptext">{{_("Integrated conversation with an instance of Mautic. To remove integration, click the button next to the URL below.")}}</span>
<table>
    <tr class="table-header">
        <th>{{_("Domain")}}</th>
        <th id=th-remove>{{_("Remove")}}</th>
    </tr>
    <tr class="url-table">
        <td><a href={{connections.url}} target="_blank">{{connections.url}}</a></td>
        <td id=th-remove><a href="{{ conversation.url('conversation-tools:mautic') }}/delete/{{connections.id}}"><i class="fas fa-trash-restore"></i></a><br></td>
    </tr>
</table>
{% endif %} 