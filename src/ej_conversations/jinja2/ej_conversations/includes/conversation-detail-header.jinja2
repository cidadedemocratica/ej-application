{% if background_image_url %}
    <div class="banner" style="background-image: url('{{background_image_url}}')">
        <div class="conversation-header__gradient"></div>
        <section class="content-grid conversation-header" id="conversation-detail-header">
            <div class="conversation-header-grid">
                <div class="conversation-header-content">
                    <div class="conversation-header__label">{{ _('Conversation') }}</div>
                    <div class="conversation-header__text conversation-header__text--white">
                        {{ conversation.text }}
                    </div>
                </div>
{% else %}
    <div class="conversation-header--default-img">
        <section class="content-grid conversation-header" id="conversation-detail-header">
            <div class="conversation-header-grid">
                    <div class="conversation-header-content">
                        <div class="conversation-header__label">{{ _('Conversation') }}</div>
                        <div class="conversation-header__text">{{ conversation.text }}</div>
                    </div>
{% endif %}
                <div class="conversation-header__numbers">
                    <div class="conversation-header__n_participants">
                        <i class="fas fa-users"></i>
                        <span>
                            {{conversation.n_participants}}
                        </span>

                        <div id="conversation-header-participants"
                            class="conversation-header__tooltip hide">
                                <div class="triangle triangle--top triangle--white"></div>
                                <div class="conversation-header__label">
                                    {{_("participants")}}
                                </div>
                        </div>
                    </div>
                    <div>
                        <span class="conversation-header__pipe">&#124;</span>
                    </div>
                    <div class="conversation-header__n_votes">
                        <i class="fas fa-vote-yea"></i>
                        <span >{{conversation.n_votes}}</span>

                        <div id="conversation-header-votes"
                            class="conversation-header__tooltip hide">
                                <div class="triangle triangle--top triangle--white"></div>
                                <div class="conversation-header__label">
                                    {{_("votes")}}
                                </div>
                        </div>
                    </div>
                </div>
            </div>
            <dialog class="toast toast--hide" id="share-conversation-dialog-confirmation">
                <div class="toast__content">
                    <span>{{_("Link copied to clipboard")}}</span>
                </div>
            </dialog>
        </section>
    </div>

<script>
    $(document).ready(function() {
        $(".conversation-header__n_participants").on({
            mouseenter: function() {
                $("#conversation-header-participants").removeClass("hide");
            },
            mouseleave: function() {
                $("#conversation-header-participants").addClass("hide");
            },
            click: function() {
                let tooltip = $("#conversation-header-participants");
                tooltip.toggleClass("hide");
            }
        })

        $(".conversation-header__n_votes").on({
            mouseenter: function() {
                $("#conversation-header-votes").removeClass("hide");
            },
            mouseleave: function() {
                $("#conversation-header-votes").addClass("hide");
            },
            click: function() {
                let tooltip = $("#conversation-header-votes");
                tooltip.toggleClass("hide");
            }
        })
    })
</script>
