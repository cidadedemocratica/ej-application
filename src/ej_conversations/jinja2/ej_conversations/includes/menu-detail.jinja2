<nav title="{{ _('Conversation') }}" aria-labelledby="menu-conversation">
    <ul class="nav-header menu-padding-vertical menu-padding-horizontal">
        <li id="board-name">
            <a href="{{ url('boards:conversation-list', board=request.user.boards.first()) }}">
                <i class="fa fa-arrow-circle-left"></i>
                <span>{{ conversation.board }}</span>
            </a>
        </li>

        <li class="menu-item">
            <a href={{conversation.url("report:general-report")}}><span>{{ conversation.title }}</span></a>
            
        </li>
        
        {% if request.user.has_perm('ej.can_edit_conversation', conversation) %}
            <li class="menu-item">
                <a href="{{ conversation.url('conversation:edit') }}">{{ _('Edit') }}</a>
            </li>
        {% else %}
            <li>
                <a href="{{ url('conversation:list') }}">{{ _('Back to conversations') }}</a>
            </li>
        {% endif %}
    </ul>

    <ul class="menu-padding-vertical menu-padding-horizontal nav-categories">
        <h3 id="menu-conversation">{{ _('Collect opinions') }}</h3>
        
        {% for link in page_menu.links('conversations:detail-actions', request, conversation) %}
            <li>{{ link }}</li>
        {% endfor %}
        {%- if request.user.has_perm('ej.can_moderate_conversation', conversation) %}
            <li><a href="{{ conversation.url('conversation:moderate') }}">{{ _('Moderate') }}</a></li>
        {% endif %}
    </ul>

    <hr class="nav-divider">

    <ul class="menu-padding-vertical menu-padding-horizontal nav-categories">
        <h3 id="menu-conversation">{{ _('Model and Analyze') }}</h3>
        {% for link in page_menu.links('conversations:detail-admin', request, conversation) %}
            <li>{{ link }}</li>
        {% endfor %}
        {% if request.user.has_perm("ej.can_view_report", conversation) %}
            <li class="report-section">
                <div onclick="showSection('isexpanded3', 'report-options-list');">
                    <div class="display-reports">
                        <input type="checkbox" id="isexpanded3"/>
                        <label for="isexpanded3"><i class="fa fa-chevron-down"></i></label>
                    </div>
                    <a id="reports" href="" onclick="setChecked('isexpanded3')">{{ _('Reports') }}</a>
                </div>
                
            <ul id="report-options-list">
                {% if request.user.has_perm("ej.can_view_report", conversation) %}
                    <li><div id="general-report" class="general-item"><a href=" {{ conversation.url('report:general-report') }}">{{ _('General report') }}</a></div></li>
                    <li><div id="comments-report" class="comments-item"><a href=" {{ conversation.url('report:comments-report') }}">{{ _('Comments report') }}</a></div></li>
                    <li><div id="participants-report" class="users-item"><a href=" {{ conversation.url('report:users') }}">{{ _('Participants report') }}</a></div></li>
                    <li><div id="clusters" class="clusters-item"><a href=" {{ conversation.url('cluster:index') }}">{{ _('Opinion groups') }}</a></div></li>
                    <li><div id="scatter" class="scatter-item"><a href=" {{ conversation.url('dataviz:scatter') }}">{{ _('Scatter plot') }}</a></div></li>
                {% endif %}
            </ul>    
        </li>
        {% endif %}
    </ul>    

<script>
function setChecked(check_id) {
    event.preventDefault();
    let checkbox = document.getElementById(check_id);
    checkbox.checked = !checkbox.checked;
}

function showSection(check_id, section_id) {
    let checkbox = document.getElementById(check_id)
    let section = document.getElementById(section_id);
    if (checkbox.checked) {
        section.className = "show"
    } else {
        section.className = "hide"
    }
}

 function menuController() {
    let url = window.location.href.split("/");
    let menuItem = url[url.length-2].split("-")[0];
    let backgroundColor = document.querySelector("." + menuItem + "-item"); 

    if (backgroundColor) {
        backgroundColor.className = "selected";
        document.getElementById("reports").click();
    }

};
window.addEventListener('load', menuController);
</script>
