<form class="voting-form" hx-post="{{ url('boards:conversation-detail', **conversation.get_url_kwargs()) }}" hx-target="#comment-content-container" hx-swap="outerHTML">
    {{ csrf_input }}
    <input type="hidden" name="action" value="vote">
    <input type="hidden" name="comment_id" value="{{ comment.id }}">
    <div class="voting-card__voting-form__choices">
        <button type="submit" class="voting-card__voting-form__choices--agree" name="vote" value="agree">
            <i class="fa fa-thumbs-up"></i>
            {{_("Agree")}}
        </button>
        <button type="submit" class="voting-card__voting-form__choices--disagree" name="vote" value="disagree">
            <i class="fa fa-thumbs-down"></i>
            {{_("Disagree")}}
        </button>
        <button type="submit" name="vote" class="voting-card__voting-form__choices--skip" value="skip">
            <i class="fa fa-arrow-up"></i>
            {{_("Skip")}}
        </button>
    </div>
    <a class="voting-card__voting-form__back" href="{{ url('profile:home')}}">
        <i class="fa fa-arrow-left"></i>
    </a>
</form>