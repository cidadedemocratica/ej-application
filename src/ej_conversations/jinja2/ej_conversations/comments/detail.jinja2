{% extends 'ej_conversations/base.jinja2' %}
{% set main_class = 'container-1 pad-x0' %}


{% block content %}
    {{ conversation|role('balloon') }}
    <h1 class="title margin-t0">{{ _('Comments') }}</h1>
    {% if comment %}
        {{ comment|role('card', show_actions=show_actions, message=message|safe) }}
    {% else %}
        <div class="comment-card center">
            <article>
                <h1 class="h3">{{ _('Congratulations!') }}</h1>
                <p>{{ _("There are no comments left to vote :)") }}</p>
            </article>
        </div>
    {% endif %}
    <div class="center margin-3">
        <a class="button is-primary" href="{{ conversation.get_absolute_url() }}">
            {% trans %}Go to conversation{% endtrans %}<i class="fa fa-arrow-right"></i>
        </a>
    </div>
{% endblock %}
