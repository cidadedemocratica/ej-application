{% from 'ej_conversations/components/comment-card.jinja2' import comment_card %}

{% macro comment_list(comments, csrf_input) %}
    {% if comments | length >= 1 %}
        {% for comment in comments %}
            {{comment_card(comment, csrf_input)}}
        {% endfor %}
    {% else %}
        <p>Não há comentários para moderar</p>
    {% endif %}
{% endmacro %}
