<div class="comment-summary">
    <div class="summary">
        <div class="comment-summary__status">
            {{ span_icon(status, status_icon) }}
        </div>
        <a class="comment-summary__title" href="{{ comment_url }}">{{ text }}</a>
        <span class="comment-summary__info">{{_("Created at:")}} 
            {{ created|role('simple') }}
        </span><br>
        <span class="comment-summary__info">
            {{_("Conversation:" )}} {{ conversation }}
        </span>
    </div>
</div>
