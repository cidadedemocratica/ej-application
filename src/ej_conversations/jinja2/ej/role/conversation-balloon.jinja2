<div class="conversation-balloon"{# TODO: is-component #}{% if hidden %} style="opacity: 0.5;"{% endif %}>
    <article>
        {% if hidden %}
            {{ span_icon(_('Hidden conversation'), 'user-secret') }}
        {% else %}
            {{ span_icon(', '.join(tags)  if tags else _('Conversation'), 'tags', class_='text-7') }}
        {% endif %}
        <h1>{{ text }}</h1>
    </article>
    <div class="conversation-balloon__arrow"></div>
    {% if actions %}
        <div class="conversation-balloon__social">
            <span is-element="toggleFavorite:click"><i class="fa fa-star"></i>
                {%- if is_favorite %}{{ _("Unfavorite") }}{% else %}{{ _("Favorite") }}{% endif %}
            </span>
            <span is-element="share:click"><i class="fas fa-share-alt"></i>{{ _("Share") }}</span>
        </div>
    {% endif %}
</div>
