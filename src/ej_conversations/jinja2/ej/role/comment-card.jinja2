<div class="comment-card">
    <div class="comment-card__author">
        <img src="{{ static('/img/icons/catlogo.svg') }}"> {{ author }}
    </div>
    <article class="col flex-center"><span>{{ comment.content }}</span></article>
    {% if show_actions %}
        <form method="post" id="comment-form" up-target="{{ target or 'main' }}" up-restore-scroll up-transition="move-to-right/fade-in">
            {{ csrf_input }}
            <input type="hidden" name="action" value="vote">
            <input type="hidden" name="comment_id" value="{{ comment.id }}">
            <div class="row">
                {% for value, (icon, cls, msg) in buttons.items() %}
                    <div up-expand class="comment-card__button">
                        <button type="submit" form="comment-form" name="vote" value="{{ value }}">
                            <i class="fa {{ icon }} {{ cls }}"></i>
                        </button>
                        <span>{{ msg }}</span>
                    </div>
                {% endfor %}
            </div>
        </form>
    {% else %}
        <p class="comment-card__message">
            {% if message is defined %}{{ message }}{% else %}
                {% trans %}It is necessary to {{ login_anchor }} before voting or sending a comment!{% endtrans %}
            {% endif %}
        </p>
    {% endif %}
</div>

