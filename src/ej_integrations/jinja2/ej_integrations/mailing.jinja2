{% extends 'ej_conversations/base.jinja2' %}
{% from "ej_integrations/includes/help-card.jinja2" import help_card %}
{% block metaOG2 %}

    <meta name="description" property="og:title" content="Area de integração da EJ com outras ferramentas.">
    <meta property="og:description" content="Area de integração da EJ com outras ferramentas.">

{% endblock metaOG2 %}

{% block _menu %} {{ menu(request.user, board_palette) }} {% endblock %}

{% block content %}
<div class="tools">
	<div class="tools-container-full-width">
		<div class="tools-title">
			<h1 class="h2 text-accent">
			<a href="{{ conversation.patch_url('conversation-tools:index') }}">{{_("Integrations")}}</a>
			> {{ tool.name }}</h1>
			<span class="helptext tool-description">{{tool.description }}</span>
		</div>
		<h3 class="h3 divider">{{_("Template generator")}}</h3>
		<span class="helptext">{{_("Generate the html template of this conversation")}}</span>
		<div class="tools-divider">
			<div class="tools-card-container">
				<div class="tools-card-body">
					<div class="tools-card-body-img">
						<img class="avatar" src="/static/img/icons/icon-mailing.svg">
						</div>
					<div class="tools-card-content mailing">
						<span class="tools-card-title">{{_("Generator")}}</span>
						<p class="helptext">{{_("Configure the template so that it integrates with your firing strategy.")}}</p>
						{% include 'ej_integrations/form-mailing.jinja2' %}
					</div>
				</div>
			</div>
		</div>
		</div>
		<div class="opinion-component-card-list">
			{{ help_card(_("When should I use the email template?"), "/docs/user-guides/pt-br/tools-mail-template.html#sonda-de-e-mail")}}
		</div>
	</div>
</div>
{% endblock %}
