{% extends 'ej_users/base.jinja2' %}
{% set title_level = 2 %}

{% block content %}
    <h2 class="h2 text-accent center" aria-hidden="true">{{ title|default(_(settings.EJ_LOGIN_TITLE_TEXT)) }}</h2>
    <img class="size-6 pad-t3 block relative margin-xauto" src="{{ static('/img/login/login.svg') }}" style="left: 1rem" alt="">
    <h1 class="screen-reader">{{ _('Please enter your login credentials') }}</h1>
    {{ super() }}
{% endblock %}


{% block form_data %}
    <form method="post" class="pad-t3 form-narrow" aria-label="{{ _('Login form') }}" aria-live="assertive">
        {{ csrf_input }}
        {{ form }}
        <div class="margin-t3 margin-xauto">
            <input type="submit" name="submit" value="{{ _('Login') }}" class="width-full is-primary">
        </div>
    </form>
<div class="center"><a href="{{ url('auth:recover-password') }}" class="semi-bold underline">{{ _('Recover password') }}</a></div>
<script src="/static/js/vote-from-template.js"></script>
{% endblock %}


{% block form_footer %}
    <hr class="width-2/3 margin-y2 margin-auto">
    <div class="bold margin-y2 center" aria-hidden="true">
        <span>{{ _(settings.EJ_REGISTER_TEXT) }}</span>
        <p class="margin-y2"><a class="button" href="{{ url('auth:register') + next }}" secondary aria-label="{{ _('Create your account!') }}">{{ _('Register now!') }}</a></p>
    </div>
{% endblock %}

