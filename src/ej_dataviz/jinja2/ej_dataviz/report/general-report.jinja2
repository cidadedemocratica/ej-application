{% extends 'ej_dataviz/report/base.jinja2' %}
{% from "ej_dataviz/report/export-data.jinja2" import export_modal %}

{% block report %}

    <div class="title-export">
        <span class="h2 text-accent">
            {{ _('General Report') }}
            <a href=" {{ conversation.url('report:users') }}">
                ({{ statistics.participants.voters }} {{ _('Participants') }})
            </a>
        </span>
        {{ export_modal(can_view_detail, conversation, type_data, conversation.slug) }}
    </div>
    
    <div class="report-card-list">
    {% include 'ej_dataviz/report/includes/votes-card.jinja2' %}
    {% include 'ej_dataviz/report/includes/comments-card.jinja2' %}
    </div>

    <div class="report-charts">
        <div class="vote-chart">
            {% include 'ej_dataviz/report/includes/votes-over-time.jinja2' %}
        </div>
        <div class="channel-vote-chart">
            {% include 'ej_dataviz/report/includes/channel-chart-card.jinja2' %}
        </div>
    </div>

    <div id="word-cloud-card-id" class="word-cloud-card">
        <p>{{ _('Word cloud')}}</p> 
        {% include 'ej_dataviz/report/includes/word-cloud-card.jinja2' %}   
    </div>

{% endblock %}
