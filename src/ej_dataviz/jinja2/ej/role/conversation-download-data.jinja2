<div class="margin-t3"> 
    <ul class="list-reset margin-x3">
        {%- for name, path, request_kwargs in formats -%}
            <li style="padding-left:0;"><a href="{{ url(path, **request_kwargs) }}">
                <span id="format-name">{{ name }}</span></a>
            </li>
        {% endfor %}
    </ul>
</div>
