{% extends 'ej_conversations/list.jinja2' %}
{% set main_class = "form-container" %}
{% set body_class = 'body theme-' + board.palette %}

{% block content %}
<h1 class="h2 text-accent center margin-b3">{{ title }}</h1>
{%- if board.conversations.count() == 0 %}
    <div class="helptext helptext-center">{{ help_title }}</div>
{% endif %}

{%- if request.user.has_perm('ej.can_edit_board', board) and  board.conversations.count() == 0%}
    <div class="width-full margin-y4">
            <a class="is-primary button" href="{{ url('boards:conversation-create', board=board) }}">
                {{ _('New Conversation') }}</a>
    </div>
{% endif %}

    <div class="alternate-cards">
        {% for conversation in conversations %}
            <div class="margin-y3">{{ conversation|role('card') }}</div>
        {% endfor %}
    </div>
{% endblock %}


{% block menu %}
    <nav title="{{ _('Conversations') }}">
        <h3>{{ _('Conversations') }}</h3>
        <ul>
            <li><a href="{{ url('boards:conversation-list', board=board) }}">{{ _('Conversations') }}</a></li>
            {%- if request.user.has_perm('ej.can_edit_board', board) %}
                <li><a href="{{ url('boards:conversation-create', board=board) }}">{{ _('New Conversation') }}</a></li>
                <li><a href="{{ url('boards:board-edit', board=board) }}">{{ _('Edit board') }}</a></li>
            {% endif %}
        </ul>
    </nav>
    {{ page_menu.ABOUT(request) }}
    {{ page_menu.ACCESSIBILITY() }}
{% endblock %}

{% block metaOG2 %}
    <meta name="description" property="og:title" content="{{ board.title }}">
    <meta property="og:description" content="{{ board.description }}">
    <meta name="twitter:title" content="{{ board.title }}">
{% endblock metaOG2 %}
