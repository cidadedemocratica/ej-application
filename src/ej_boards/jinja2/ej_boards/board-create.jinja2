{% extends 'base.jinja2' %}

{% block content %}
    <div class="Board-TopMenu">
        <button onclick="history.back()">
            <img src="/static/img/icons/icon_cancel.svg"/>
            {{ _('Cancel') }}
        </button>
        <button form="create-board-form" type=submit>
            <img src="/static/img/icons/icon_save.svg"/>
            {{ _('Save board') }}
        </button>
    </div>
    <div class="CenteredContainer" compact>
        {% block form_identification %}
        <h1 class="Board-Title">{{ _('Create board') }}</h1>
        <p>{{ _('Fill up the form to create a new conversation board') }}</p>
        {% endblock %}
        <form id="create-board-form" method="post" class="Form BoardForm" enctype="multipart/form-data">
            {{ csrf_input }}
            {{ form.as_p() }}
            <label for="id_image" class="FormItem CustomFileInput">
                <div>
                    {{ _('Choose a file') }}
                </div>
                <div id="image-filename">
                    {{ _('No file chosen') }}
                </div>
            </label>
            <div>
                <input type="submit" class="Button" value="{{ _('Save') }}" name="create">
            </div>
        </form>
    </div>
{% endblock %}
