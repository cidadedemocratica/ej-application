{% set up_transition = 'cross-fade' %}
{% from 'components/generic/elements.jinja2' import action_button %}


{# Page footer with links and other information #}
{% macro page_footer(social_icons, footer_data, request=None) %}
    <footer class="Footer">
        <ul class="Footer-social">
            {% for icon in social_icons %}
                <li>{{ icon }}</li>
            {% endfor %}
        </ul>
        <article class="Footer-info">
            {{ footer_data }}
        </article>
        {% if (not request.user.is_authenticated) and request.path != '/login/' %} 
          <p class="Footer-login">{{ action_button(_('Enter'), '/login/') }}</p>
        {% endif %}
    </footer>
{% endmacro %}
